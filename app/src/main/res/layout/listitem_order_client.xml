<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#2F4F4F"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_item_client_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DF5900"/>
        <TextView
            android:id="@+id/list_item_client_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DF5900"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true">
        <Button
            android:id="@+id/client_order_decrement_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dec_button_selector"/>
        <TextView
            android:id="@+id/client_item_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"/>
        <Button
            android:id="@+id/client_order_increment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/inc_button_selector"/>
    </LinearLayout>
</RelativeLayout>